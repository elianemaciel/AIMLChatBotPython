<?xml version="1.0" encoding="UTF-8" ?>

<aiml version="1.0">
    <!-- std-startup.xml -->

    <!-- Category is an atomic AIML unit -->
    <category>

        <!-- Pattern to match in user input -->
        <!-- If user enters "LOAD AIML B" -->
        <pattern>LOAD AIML</pattern>

        <!-- Template is the response to the pattern -->
        <!-- This learn an aiml file -->
        <template>
            <learn>chatbot-aiml/basic_chat.aiml</learn>
            <!-- You can add more aiml files here -->
            <learn>chatbot-aiml/questions_plano.xml</learn>
            <learn>chatbot-aiml/questions_ecommerce.aiml</learn>
            <learn>chatbot-aiml/questions_fiscal.aiml</learn>
            <learn>chatbot-aiml/end.aiml</learn>
        </template>

    </category>


</aiml>
